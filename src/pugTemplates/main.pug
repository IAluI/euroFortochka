mixin icon(name, color)
  svg(class = `icon icon-${name}${color ? ' icon-' + color: ''}`)&attributes(attributes)
    use(xlink:href = `/img/common/icons.svg#${name}`)

mixin crumbs(name, link)
  span.mx-1
    | -
  a(href = link).text-black-50
    = name

